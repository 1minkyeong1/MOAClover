@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MOAClover</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MOAClover.styles.css" asp-append-version="true" />
    <link rel="stylesheet"  href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex flex-column align-items-center py-3">

                <!-- 브랜드 로고 영역 -->
                <div class="logo-box">
                    <!-- 배경이미지 공간 
                        <div class="logo-box" style="width:100%; height:180px; background-image:url('/images/logo-bg.jpg'); background-size:cover; background-position:center;
                           display:flex; flex-direction:column; justify-content:center; align-items:center;"> 
                     -->

                    <!-- 로고 이미지 공간 -->
                    <!-- <img src="/images/mylogo.png" alt="로고 이미지" style="height:70px; margin-bottom:10px; display:none;" id="mainLogoImg"> -->

                    <!-- 텍스트 로고 -->
                    <!-- 1줄: 가운데 로고 / 오른쪽 로그인영역 -->
                    <div class="header-top-row">
                        <div></div>

                        <!-- 로고(가운데 고정) -->
                        <div class="header-logo-center">
                            <a href="/Home/Index" class="header-logo-link">
                                <div class="header-logo-text">모아클로버</div>
                            </a>
                        </div>

                        <!-- 오른쪽 메뉴 -->
                        <div class="header-right-menu">
                            @if (User.Identity!.IsAuthenticated)
                            {
                                <a asp-controller="Account"
                                   asp-action="MyPage"
                                   class="header-right-link header-right-strong">
                                    👤 @User.Identity.Name
                                </a>

                                <form asp-controller="Account"
                                      asp-action="Logout"
                                      method="post"
                                      class="header-inline-form">
                                    <button type="submit" class="header-right-btnlink">로그아웃</button>
                                </form>

                               @*  @if (User.IsInRole("admin"))
                                {
                                    <a href="/Home/Create" class="header-right-link">
                                        상품등록
                                    </a>
                                } *@
                                @if (User.IsInRole("admin"))
                                {

                                    <a href="/Home/Create"
                                       style="color:#777; text-decoration:none; margin-left:10px;">
                                        상품등록
                                    </a>

                                    @await Component.InvokeAsync("AdminQnaAlert")
                                   
                                }
                            }
                            else
                            {
                                <a href="/Account/Login" class="header-right-link">
                                    로그인
                                </a>
                            }
                        </div>
                    </div>

                    <!-- 2줄: 가운데 검색창 -->
                    <div class="header-search-row">
                        <form asp-controller="Home" asp-action="Index" method="get" class="header-search-form">
                            <input type="hidden" name="page" value="1" />

                            @if (!string.IsNullOrWhiteSpace(Context.Request.Query["showHidden"]))
                            {
                                <input type="hidden" name="showHidden" value="@Context.Request.Query["showHidden"]" />
                            }

                            <input class="header-search-input"
                                   type="text"
                                   name="q"
                                   value="@Context.Request.Query["q"]"
                                   placeholder="상품 검색" />

                            <button class="header-search-btn" type="submit">검색</button>
                        </form>
                    </div>

                </div>
               
                <!-- 카테고리 자동추가 -->
                <div class="navbar-collapse collapse show d-flex justify-content-center mt-2">

                    <!-- ✅ 전체(카테고리 필터 해제) -->
                    <a href="/Home/Index" class="cat-all-link @(string.IsNullOrEmpty(Context.Request.Query["categoryId"]) ? "active" : "")">
                        전체
                    </a>

                    @await Component.InvokeAsync("CategoryMenu")
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="margin-top:80px; padding:40px 20px; background:#f7f7f7; text-align:center; color:#555;">
        <div style="font-size:20px; font-weight:bold;">모아클로버</div>
        <div style="margin-top:10px; line-height:1.6; font-size:14px;">
            대표자: 홍길동 | 사업자등록번호: 000-00-00000<br>
            Email: contact@myshop.com | 고객센터: 010-0000-0000<br>
            주소: 서울특별시 어디구 어디동 123-45
        </div>
        <div style="margin-top:15px; font-size:13px; color:#888;">© 2025 MOAClover. All rights reserved.</div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const urlParams = new URLSearchParams(window.location.search);

            // 회원가입 후 자동 로그인창 띄우기
            if (urlParams.get("showLogin") === "true") {
                openLoginModal(); 
            }

        });
    </script>



    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>