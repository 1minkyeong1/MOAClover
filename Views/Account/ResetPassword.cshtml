@{
    ViewData["Title"] = "비밀번호 재설정";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/Find.css" />

<div class="find-container">
    <h2>새 비밀번호 설정</h2>

    <form method="post" asp-action="ResetPassword" asp-controller="Account">
        @Html.AntiForgeryToken()

        <!-- 컨트롤러에서 ViewBag.TokenId / ViewBag.Token 넣어준 값 -->
        <input type="hidden" name="tokenId" value="@ViewBag.TokenId" />
        <input type="hidden" name="token" value="@ViewBag.Token" />

        <label>새 비밀번호</label>
        <input type="password" name="newPassword" required />

        <label>비밀번호 확인</label>
        <input type="password" name="confirmPassword" required />

        <button class="btn-main" type="submit">비밀번호 변경</button>

        <button type="button" class="btn-main btn-back" onclick="location.href='/Account/Login'">
            로그인으로 이동
        </button>
    </form>

    @* 에러 메시지 표시(원하시면) *@
    @if (!ViewData.ModelState.IsValid)
    {
        <div style="margin-top:12px; color:#d00;">
            @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@err.ErrorMessage</div>
            }
        </div>
    }
</div>
