@{
    Layout = null; // 레이아웃 제거
    ViewData["Title"] = "로그인";
}

<link rel="stylesheet" href="~/css/Login.css" />

<div class="login-box">
    <h2>로그인</h2>
    <form action="/login" method="post">
        <input type="text" name="username" placeholder="사용자 이름" required>
        <input type="password" name="password" placeholder="비밀번호" required>
        <button type="submit" class="btn btn-login">로그인</button>
        <button type="button" class="btn btn-cancel" onclick="location.href='/Home/Index'">취소</button>
    </form>

    <a href="/Account/Register" class="register-link">회원가입</a>
    <a href="/Account/FindId" class="login-link">아이디 찾기</a>
    <a href="/Account/FindPassword" class="login-link">비밀번호 찾기</a>
</div>
